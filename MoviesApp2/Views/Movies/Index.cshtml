@model IEnumerable<MoviesApp2.Models.Movie>

<p>
    @Html.ActionLink("Create New Movie", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @*            @Html.DisplayNameFor(model => model.Category.Name)*@
            Category name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
          

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edytuj", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}) |
                @Html.ActionLink("Reviews", "Index", "Reviews", new { movieId=item.Id }, new {@class="btn btn-warning"}) 
            </td>
        </tr>
    }

</table>
